<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="30dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/am_tv1"
        style="@style/Focusable"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="#ed0b80"
        android:gravity="center"
        android:padding="50dp"
        android:text="上 下 都是 RecyclerView 的界面"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/am_tv2"
        style="@style/Focusable"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginLeft="20dp"
        android:background="#0d4bd9"
        android:gravity="center"
        android:padding="50dp"
        android:text="上【Tab】 + 下【RecyclerView】的界面"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/am_tv1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/am_tv3"
        style="@style/Focusable"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="#0d4bd9"
        android:gravity="center"
        android:padding="50dp"
        android:text=" 左 右 都是 RecyclerView 的界面"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/am_tv1" />

    <TextView
        android:id="@+id/am_tv_4"
        style="@style/Focusable"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="#0d4bd9"
        android:gravity="center"
        android:text=" 左【Tab】 + 右【RecyclerView】的界面"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/am_tv2"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/am_tv1" />

</android.support.constraint.ConstraintLayout>